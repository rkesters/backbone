{
    "extends": [
        "./node_modules/tslint-microsoft-contrib/recommended_ruleset.js",
        "tslint-config-airbnb",
        "tslint-config-prettier"
    ],
    "rulesDirectory": ["./node_modules/tslint-misc-rules/rules"],
    "rules": {
        "prefer-or-operator-over-ternary": true,
        "no-console": [true, ["log", "info", "debug"]],
        "no-unused-variable": true,
        "arrow-return-shorthand": true,
        "early-exit": true,
        "variable-name": [true, "check-format", "allow-pascal-case"],
        "class-name": true,
        "prefer-template": [true],
        "interface-name": [true, "always-prefix"],

        "underscore-consistent-invocation": false,
        "no-reserved-keywords": false,
        "type-literal-delimiter": false,
        "no-require-imports": false,
        "no-parameter-properties": false,
        "no-function-expression": false,
        "function-name": false,
        "ban-types": false,
        "export-name": false,
        "import-name": false,
        "max-classes-per-file": [false],
        "member-ordering": false,
        "max-func-body-length": false,
        "match-default-export-name": false,
        "max-file-line-count": [false],
        "prefer-method-signature": false,
        "no-use-before-declare": false,
        "no-backbone-get-set-outside-model": false,
        "no-banned-terms": false,
        "no-bitwise": false,
        "no-implicit-dependencies": false,
        "no-import-side-effect": false,
        "no-increment-decrement": false,
        "no-multiline-string": false,
        "no-non-null-assertion": false,
        "no-invalid-this": false,
        "cyclomatic-complexity": false,
        "comment-format": false,
        "no-http-string": false,
        "no-any": false,
        "typedef": false,
        "no-unsafe-any": false,
        "one-variable-per-declaration": false,
        "no-submodule-imports": false,
        "strict-boolean-expressions": false,
        "no-relative-imports": false,
        "no-unnecessary-class": false,
        "no-default-export": false,
        "no-void-expression": false,

        "callable-types": false,
        "no-debugger": false,
        "missing-jsdoc": false,
        "jsdoc-format": false,
        "completed-docs": false,
        "no-this-assignment": false,
        "object-shorthand-properties-first": false,
        "no-floating-promises": false,
        "no-unused-expression": false,
        "no-redundant-jsdoc": false,
        "await-promise": false
    }
}
